# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf

# R
*.R text eol=lf
*.Rmd text eol=lf

# Jupyter Notebooks
*.ipynb text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Data files
*.csv text eol=lf
*.tsv text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Binary files
*.pkl binary
*.rds binary
*.h5 binary
*.pb binary
*.png binary
*.jpg binary
*.jpeg binary
*.pdf binary


